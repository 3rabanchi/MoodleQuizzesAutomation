@model TeachingTool.Models.Question
    
@{
    ViewData["Title"] = "Create";
}


<h2>Create</h2>

<h4>Question</h4>
<hr />
@{
    var item = new Question();   
}
@using (Html.BeginForm())
{
    <div class="row">
        <div class="col-md-4">
            <form asp-action="Create">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="type" class="control-label">Type</label>
                    @Html.DropDownList("selectType",new SelectList(Enum.GetValues(typeof(QuestionTypes))),
                         new { @class = "form-control" })
                    <span asp-validation-for="type" class="text-danger"></span>


                </div>

                <a asp-action="Type" asp-route-id="@ViewData["Type"]">Type</a>

                <div class="form-group">
                    <input type="submit" value="Next" class="btn btn-default" />
                </div>

            </form>
        </div>
    </div>
}
<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
